generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

enum GameDifficulty {
  EASY
  MEDIUM
  HARD
  EXPERT
}

enum GameCategory {
  FINANCE
  STRATEGY
  OPERATIONS
  INVESTING
  OTHER
}

enum GameStatus {
  PENDING
  ACTIVE
  ARCHIVED
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Game {
  id         String          @id @default(cuid())
  title      String
  slug       String          @unique
  difficulty GameDifficulty @default(MEDIUM)
  category   GameCategory   @default(OTHER)
  status     GameStatus     @default(PENDING)
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt
}

model GameSession {
  id              String   @id @default(cuid())
  gameSlug        String
  userId          String
  playTimeMinutes Int      @default(0)
  launchCount     Int      @default(0)
  updatedAt       DateTime @updatedAt

  @@unique([gameSlug, userId])
}
